<script>
    function updateDateTime() {
        var dateElement = document.getElementById("date");
        var vietnamTimeElement = document.getElementById("vietnam-time");

        var currentDate = new Date();

        // Định dạng ngày và giờ theo yêu cầu và ngôn ngữ tiếng Việt
        var options = { weekday: 'long', year: 'numeric', month: 'numeric', day: 'numeric', hour: 'numeric', minute: 'numeric', second: 'numeric', hour12: true };
        var formatter = new Intl.DateTimeFormat('vi-VN', options);
        var formattedDateTime = formatter.format(currentDate);

        dateElement.textContent = formattedDateTime;
        vietnamTimeElement.textContent = ""; // Bạn muốn thêm giờ Việt Nam ở đây
    }

    // Gọi hàm cập nhật ngày và giờ khi trang web được tải
    updateDateTime();

    function submitForm1(formNumber) {
        // Kiểm tra xem tất cả các trường thông tin đã được điền đầy đủ
        var Emaildky = document.getElementById("Emaildky" + formNumber).value;
        if (Emaildky) {
            // Hiển thị hộp thoại thông báo đã gửi liên hệ thành công
            alert("Email đăng ký của bạn đã được gửi thành công!");
        } else {
            // Hiển thị thông báo yêu cầu điền đầy đủ thông tin
            alert("Vui lòng điền đầy đủ thông tin");
        }
    }
</script>



