@using doannam4.Utilities;
@model doannam4.Models.Post
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h2>Xác nhận sửa bài viết</h2>
    </div>

    <div class="container box-shadow p-5">
        <div class="row pb-2">
            <h2>Sửa bài viết</h2>
        </div>

        <form method="post">
            <div asp-validation-summary="All"></div>

            <div class="form-row">
                <input type="text" class="form-control mb-3" asp-for="PostID" type="hidden">

                <div class="form-group col-md-6">
                    <label asp-for="Title">Title</label>
                    <input type="text" class="form-control mb-3" asp-for="Title" placeholder="Nhập tiêu đề">
                    <span asp-validation-for="Title" class="alert-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Abstract">Abstract</label>
                    <input type="text" class="form-control mb-3" asp-for="Abstract" placeholder="Nhập tiêu đề chính">
                    <span asp-validation-for="Abstract" class="alert-danger"></span>
                </div>

                <div class="form-group col-md-6">
                    <label class="control-label">Images</label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <button class="bth btn-success" type="button" onclick="openDialog()">Choose a pic</button>
                        </div>
                        <input type="text" class="form-control" asp-for="Images" id="file_input" aria-describedby="button-addon2">
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <label class="control-label">Contents</label>
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" asp-for="Contents" id="file_input" aria-describedby="button-addon2">
                        <span asp-validation-for="Contents" class="alert-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Cre">Cre</label>
                    <input type="text" class="form-control mb-3" asp-for="Cre" placeholder="Nhập nguồn">
                    <span asp-validation-for="Cre" class="alert-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Link">Link</label>
                    <input type="text" class="form-control mb-3" asp-for="Link" placeholder="Nhập link nguồn">
                    <span asp-validation-for="Link" class="alert-danger"></span>
                </div>
                 <div class="form-group col-md-6">
                    <label asp-for="MenuID">MenuID</label>
                    <select asp-for="MenuID" class="form-select" id="MenuID">
                        <option value="2">Thời sự</option>
                        <option value="4">Giáo dục</option>
                        <option value="5">Pháp luật</option>
                        <option value="6">Sức khoẻ</option>
                        <option value="7">Đời sống</option>
                        <option value="9">Bất động sản</option>
                        <option value="10">Chứng khoán</option>
                        <option value="11">Kinh doanh</option>
                        <option value="13">Việt Nam</option>
                        <option value="14">Thế giới</option>
                        <option value="15">Giải trí</option>
                        <option value="16">Típ sống</option>
                    </select>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="CreateDate">Created Date</label>
                    <input asp-for="CreateDate" class="form-control" value="@Functions.getCurrentDate()" />
                    <span asp-validation-for="CreateDate" class="alert-danger"></span>
                </div>
                <div class="form-group mt-3 mb-5">
                    <label>
                        @Html.CheckBox("IsActive", Model.IsActive)
                        Hiển thị
                    </label>
                </div>
                <div class="form-group d-none">
                    <input asp-for="Status" class="form-control" value="1" />
                </div>
                <div class="form-group d-none">
                    <input asp-for="PostOrder" class="form-control" value="1" />
                </div>

            </div>
            <button type="submit" class="btn btn-lg btn-primary p-2"><i class="bi bi-file-plus-fill"></i>Lưu</button>
            <a asp-controller="Post" asp-action="Index" class="btn btn-lg btn-warning p-2">Quay lại</a>
        </form>
    </div>
</main>
@{
    var summerNote = new doannam4.Areas.Admin.Models.SummerNote("#Contents");
    <partial name="_SummerNote" model="summerNote" />
}
