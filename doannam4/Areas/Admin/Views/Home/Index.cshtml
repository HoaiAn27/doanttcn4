@using doannam4.Models;

@model IList<view_Post_Access>
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h2>Số lượng truy cập mỗi bài viết</h2>
    </div>
    <p>

    </p>
    <section class="section dashboard">
        <div class="row">
            <div class="col-12">
                <div class="card recent-sales overflow-auto">
                    <div class="card-body mt-4">
                        <table class="table table-borderless datatable">
                            <thead>
                                <tr>
                                    <th class="col-1 text-center">#</th>
                                    <th class="col-1 text-center">Title</th>
                                    <th class="col-1 text-center">Abstract</th>
                                    <th class="col-7 text-center">Contents</th>
                                    <th class="col-1 text-center">AccessCount</th>
                                    <th class="col-1 text-center">Nguồn</th>
                                    <th class="col-1 text-center">Hide/Show</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th class="text-center" scope="row">@item.PostID</th>
                                        <td>
                                            <a asp-area="Admin" asp-controller="Home" asp-action="Index"
                                           asp-route-id="@item.PostID" class="text-primary">@item.Title</a>
                                        </td>

                                        <td>
                                            <a asp-area="Admin" asp-controller="Home" asp-action="Index"
                                           asp-route-id="@item.PostID" class="text-primary">@item.Abstract</a>
                                        </td>
                                        <td>
                                            <a asp-area="Admin" asp-controller="Home" asp-action="Index"
                                           asp-route-id="@item.PostID" class="text-primary">@item.Contents</a>
                                        </td>
                                        <td class="text-center">
                                            <a asp-area="Admin" asp-controller="Home" asp-action="Index"
                                           asp-route-id="@item.PostID" class="text-primary">@item.AccessCount</a>
                                        </td>
                                        <td class="text-center">
                                            <a asp-area="Admin" asp-controller="Home" asp-action="Index"
                                           asp-route-id="@item.PostID" class="text-primary">@item.Cre</a>
                                        </td>
                                        <td class="text-center">@item.IsActive</td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
